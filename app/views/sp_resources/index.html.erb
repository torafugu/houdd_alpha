<h1>Listing sp_resources</h1>

<table>
  <tr>
    <th><%= label :sp_resource, :id %></th>
    <th><%= label :sp_resource, :terrain %></th>
    <th><%= label :sp_resource, :symbol %></th>
    <th><%= label :sp_resource, :name %></th>
    <th><%= label :sp_resource, :food %></th>
    <th><%= label :sp_resource, :production %></th>
    <th><%= label :sp_resource, :money %></th>
    <th><%= label :sp_resource, :frequency_rate %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sp_resources.each do |sp_resource| %>
  <tr>
    <td><%= sp_resource.id %></td>
    <td><%= sp_resource.terrain.name  unless sp_resource.terrain.blank? %></td>
    <td><%= sp_resource.symbol %></td>
    <td><%= sp_resource.name %></td>
    <td><%= sp_resource.food %></td>
    <td><%= sp_resource.production %></td>
    <td><%= sp_resource.money %></td>
    <td><%= sp_resource.frequency_rate %></td>
    <td><%= link_to 'Show', sp_resource %></td>
    <td><%= link_to 'Edit', edit_sp_resource_path(sp_resource) %></td>
    <td><%= link_to 'Destroy', sp_resource, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

