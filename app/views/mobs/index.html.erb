<h1>Listing mobs</h1>
ユーザー：<%= collection_select(:user, :id, HouddUser.find(:all), :id, :name, :selected => @houdd_user_id, :include_blank => true) %>
<%= render 'select_specie' %>
<input id="mobs_search" type="button" value="検索" /><br />
<table>
  <tr>
    <th>ID</th>
    <th><%= label :mob, :houdd_user %></th>
    <th><%= label :mob, :specie %></th>
    <th><%= label :mob, :generation %></th>
    <th><%= label :mob, :job %></th>
    <th><%= label :mob, :squad %></th>
    <th><%= label :mob, :name %></th>
    <th><%= label :mob, :gender_sym %></th>
    <th><%= label :mob, :age %></th>
    <th><%= label :mob, :hp %></th>
    <th><%= label :mob, :sp %></th>
    <th><%= label :mob, :str %></th>
    <th><%= label :mob, :dex %></th>
    <th><%= label :mob, :con %></th>
    <th><%= label :mob, :int %></th>
    <th><%= label :mob, :wis %></th>
    <th><%= label :mob, :cha %></th>
    <th><%= label :mob, :def %></th>
    <th><%= label :mob, :ele %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @mobs.each do |mob| %>
  <tr>
    <td><%= mob.id %></td>
    <td><%= mob.houdd_user.name unless mob.houdd_user.blank? %></td>
    <td><%= mob.specie.name unless mob.specie.blank? %></td>
    <td><div class="number"><%= mob.generation %></div></td>
    <td><%= mob.job.name unless mob.job.blank? %></td>
    <td><%= mob.squad.name unless mob.squad.blank? %></td>
    <td><%= mob.name %></td>
    <td><%= mob.gender_sym_txt %></td>
    <td><div class="number"><%= mob.age %></div></td>
    <td><%= mob.hp %></td>
    <td><%= mob.sp %></td>
    <td><%= mob.str %></td>
    <td><%= mob.dex %></td>
    <td><%= mob.con %></td>
    <td><%= mob.int %></td>
    <td><%= mob.wis %></td>
    <td><%= mob.cha %></td>
    <td><%= mob.phys_def %>/<%= mob.skill_def %></td>
    <td><%= mob.ele_fw %>/<%= mob.ele_ld %></td>
    <td><%= link_to 'Show', mob %></td>
    <td><%= link_to 'Edit', edit_mob_path(mob) %></td>
    <td><%= link_to 'Destroy', mob, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

