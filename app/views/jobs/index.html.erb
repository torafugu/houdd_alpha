<h1>Listing jobs</h1>

<table>
  <tr>
    <th><%= label :job, :type_symbol %></th>
    <th><%= label :job, :name %></th>
    <th><%= label :job, :growth_penalty %></th>
    <th><%= label :job, :wepon_lvl %></th>
    <th><%= label :job, :armor_lvl %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.type_symbol_txt %></td>
    <td><%= job.name %></td>
    <td><%= job.growth_penalty %></td>
    <td><%= job.wepon_lvl %></td>
    <td><%= job.armor_lvl %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

