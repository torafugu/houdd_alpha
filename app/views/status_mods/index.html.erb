<h1>Listing status_mods</h1>

<table>
  <tr>
    <th><%= label :status_mod, :name %></th>
    <th><%= label :status_mod, :hit_accuracy %></th>
    <th><%= label :status_mod, :d_range %></th>
    <th><%= label :status_mod, :x_range %></th>
    <th><%= label :status_mod, :hp_damage %></th>
    <th><%= label :status_mod, :str_mod %></th>
    <th><%= label :status_mod, :dex_mod %></th>
    <th><%= label :status_mod, :con_mod %></th>
    <th><%= label :status_mod, :int_mod %></th>
    <th><%= label :status_mod, :wis_mod %></th>
    <th><%= label :status_mod, :cha_mod %></th>
    <th><%= label :status_mod, :ele_fw_mod %></th>
    <th><%= label :status_mod, :ele_ld_mod %></th>
    <th><%= label :status_mod, :phys_def_mod %></th>
    <th><%= label :status_mod, :skill_def_mod %></th>
    <th></th>
